<Page x:Class="Recipe_Management_App.MyRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recipe_Management_App"
      mc:Ignorable="d" 
      Title="MyRecipePage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Grid Height="700" >
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#C4F8C4" Offset="0.2"/>
                        <GradientStop Color="#FFF0F0F0" Offset="0.9"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/chef1.png" Stretch="Fill" Width="700" Height="500" HorizontalAlignment="Right" Grid.Column="1"/>
                    <TextBlock 
                     FontSize="75"
                     FontWeight="Bold"
                     Foreground="Black"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     TextAlignment="Center"
                     Margin="60,100,20,120">
                Are You
                <LineBreak/>
                Ready To See
                <LineBreak/>
                Your Recipes Book?
                    </TextBlock>
                </Grid>

            </Grid>
            <ItemsControl ItemsSource="{Binding Recipes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="#FFF0F0F0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding Image}" Height="350" Width="350" Stretch="Fill" HorizontalAlignment="Center" Margin="210,0,70,0" Grid.Column="0"/>
                            <StackPanel Grid.Column="1" Margin="0,10,0,0">
                                <Rectangle Height="1" Fill="gray" Width="1000" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,20,0"/>
                                <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold" Margin="15"/>
                                <TextBlock Text="Ingredients and Preparation" FontSize="20" FontWeight="DemiBold" Margin="40,10,0,10"/>
                                <TextBlock FontSize="15" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding Preparation}" Margin="55,0,0,0"/>
                                <Button Content="Add To Favourite" Background="#FFABE4BC" Padding="8" Margin="60,80,650,0" BorderThickness="0" Click="AddToFavourite_click"/>
                                <Rectangle Height="1" Fill="gray" Width="1000" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,60,20,-2"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <Grid Height="450" Background="#E2F7E2" >
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="80">
                    <TextBlock Text="Ready to start cooking?" FontSize="48" FontWeight="Bold" Foreground="Green" TextAlignment="Center"  />
                    <TextBlock Text="Collect, create, share recipes with TasteBook" FontSize="19" Margin="40" TextAlignment="Center" Foreground="Black" FontWeight="UltraLight"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10"  HorizontalAlignment="Center">
                    <Image Source="Images/watsapp_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                    <Image Source="Images/youtube_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                    <Image Source="Images/instagram_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                </StackPanel>
                <Rectangle Height="2" Width="1200" Fill="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="80" />
                <TextBlock Text="Copyright © 2024 – All Rights Reserved"
               FontSize="16"
               FontWeight="DemiBold"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0,0,0,30"/>
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</Page>

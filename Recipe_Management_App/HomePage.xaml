<Page x:Class="Recipe_Management_App.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recipe_Management_App"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="HomePage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="800"/>
                <RowDefinition Height="600"/>
                <RowDefinition Height="450"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Image Source="Images/background8.jpg" Stretch="Fill"/>
                <TextBlock 
                       FontSize="75"
                       FontWeight="Bold"
                       Foreground="Black"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="20">
                Start Building 
                <LineBreak/>
                Your TasteBook
                </TextBlock>

            </Grid>
            <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
                <TextBlock
                       Text="POPULAR RECIPES"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       />
                <Rectangle  Height="4" Fill="black" Width="180" Margin="0,-15,0,15"/>


                <UniformGrid Columns="4" Margin="20">
                <StackPanel Margin="140,0,0,0">
                    <Image Source="Images/prown_salad.jpg" Height="250" Width="230" Stretch="UniformToFill"/>
                    <TextBlock Text="Prawn Salad" HorizontalAlignment="Center" FontSize="18" FontWeight="DemiBold" Margin="30"/>
                </StackPanel>
                <StackPanel Margin="60,0,10,0">
                    <Image Source="Images/chicken_ramen_noodle.jpg" Height="250" Width="230" Stretch="Fill"/>
                    <TextBlock Text="Ramen Noodles" HorizontalAlignment="Center" FontSize="18" FontWeight="DemiBold" Margin="30"/>
                </StackPanel>
                <StackPanel Margin="10,0,60,0">
                    <Image Source="Images/friedrice.jpg" Height="250" Width="230" Stretch="UniformToFill"/>
                    <TextBlock Text="Fried Rice" HorizontalAlignment="Center" FontSize="18" FontWeight="DemiBold" Margin="30"/>
                </StackPanel>
                <StackPanel Margin="0,0,140,0">
                    <Image Source="Images/cheesepizza.jpg" Height="250" Width="230" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                    <TextBlock Text="Cheese Pizza" HorizontalAlignment="Center" FontSize="18" FontWeight="DemiBold" Margin="30"/>
                </StackPanel>

            </UniformGrid>
          </StackPanel>
            <Grid Grid.Row="2" Background="#E2F7E2" >
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="80">
                    <TextBlock Text="Ready to start cooking?" FontSize="48" FontWeight="Bold" Foreground="Green" TextAlignment="Center"  />
                    <TextBlock Text="Collect, create, share recipes with TasteBook" FontSize="19" Margin="40" TextAlignment="Center" Foreground="Black" FontWeight="UltraLight"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10"  HorizontalAlignment="Center">
                    <Image Source="Images/watsapp_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                    <Image Source="Images/youtube_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                    <Image Source="Images/instagram_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                </StackPanel>
                <Rectangle Height="2" Width="1200" Fill="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="80" />
                <TextBlock Text="Copyright © 2024 – All Rights Reserved"
                       FontSize="16"
                       FontWeight="DemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,30"/>
            </Grid>




        </Grid>
    </ScrollViewer>
</Page>

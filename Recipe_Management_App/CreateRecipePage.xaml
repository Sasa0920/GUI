<Page x:Class="Recipe_Management_App.CreateRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recipe_Management_App"
      mc:Ignorable="d" 
      Title="CreateRecipePage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="450"/>
            </Grid.RowDefinitions>

            <Grid  Grid.Row="0" Height="800" >
                <Image Source="Images/background7.jpg" Stretch="Fill"/>
                <TextBlock 
                     FontSize="75"
                     FontWeight="Bold"
                     Foreground="Black"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Right"
                     TextAlignment="Center"
                     Margin="0,100,20,60">
                 Create &amp; Add Recipes 
                <LineBreak/>
                From Anywhere
                </TextBlock>

            </Grid>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
               
                <Border Background="#E2F7E2" CornerRadius="10" Padding="70" Margin="50" Grid.Column="1" >
                <StackPanel>
                    <TextBlock Text="Recipe Name" FontSize="18" FontWeight="Bold"  />
                    <TextBox Height="36" Margin="0,5,0,15" />


                    <TextBlock Text="Recipe Image" FontSize="18" FontWeight="Bold"/>
                    <Border  BorderThickness="0.5" BorderBrush="Gray" CornerRadius="5" Margin="0,5,0,15">
                        <Button Content="Choose File" Width="120" Margin="5,9,0,15" HorizontalAlignment="Left" FontSize="16" />

                    </Border>

                    <TextBlock Text="Ingredients" FontSize="18" FontWeight="Bold"  />
                    <TextBox Height="95" Margin="0,5,0,15" TextWrapping="Wrap" AcceptsReturn="True" />

                    <TextBlock Text="Instructions" FontSize="18" FontWeight="Bold"  />
                    <TextBox Height="95" Margin="0,5,0,15" TextWrapping="Wrap" AcceptsReturn="True"/>


                    <Button Content="Create Recipe" Foreground="white" Background="Green"
                                Height="35" Width="150" FontSize="14"
                                Margin="0,10,0,15" HorizontalAlignment="Left" />

                </StackPanel>
            </Border>
            </Grid>
        </ScrollViewer>

            <Grid Grid.Row="2" Background="#E2F7E2" >
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="80">
                    <TextBlock Text="Ready to start cooking?" FontSize="48" FontWeight="Bold" Foreground="Green" TextAlignment="Center"  />
                    <TextBlock Text="Collect, create, share recipes with TasteBook" FontSize="19" Margin="40" TextAlignment="Center" Foreground="Black" FontWeight="UltraLight"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10"  HorizontalAlignment="Center">
                    <Image Source="Images/watsapp_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                    <Image Source="Images/youtube_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                    <Image Source="Images/instagram_icon.png" Height="20" Width="20" Margin="0,140,20,0"/>
                </StackPanel>
                <Rectangle Height="2" Width="1200" Fill="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="80" />
                <TextBlock Text="Copyright © 2024 – All Rights Reserved"
           FontSize="16"
           FontWeight="DemiBold"
           HorizontalAlignment="Center"
           VerticalAlignment="Bottom"
           Margin="0,0,0,30"/>
            </Grid>
        </Grid>
    </ScrollViewer>
    
</Page>

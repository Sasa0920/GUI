<Page x:Class="Recipe_Management_App.GetStartedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recipe_Management_App"
      mc:Ignorable="d" 
      Background="#E2F7E2"
      Title="GetStartedPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            


        </Grid.RowDefinitions>

        <Border Grid.Row="0" Width="700" Height="650" Background="White" Padding="40" CornerRadius="10"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Login" FontSize="32" FontWeight="Bold" Margin="10,0,0,20" TextAlignment="Left"/>
                <TextBlock Name="EmailPlaceholder" Text="Email Address" FontSize="20" Foreground="Gray" IsHitTestVisible="False" Margin="20,0,0,0"/>
                <TextBox Name="EmailAddressTextbox" Height="70" Margin="20,0,0,30"/>
                <TextBlock Name="PasswordPlaceholder" Text="Password" FontSize="20" Foreground="Gray" IsHitTestVisible="False" Margin="20,0,0,0"/>
                <PasswordBox Height="70" Margin="20,10,0,30" />
                <Button Content="Continue" Height="70" Background="green" Foreground="White" FontSize="24"
                        Margin="20,10,0,30" BorderThickness="0"/>
                <TextBlock HorizontalAlignment="Left" Margin="20,0,0,20" FontSize="20">
                        <Run Text="Create an account?" Foreground="Gray"/>
                        <Run Text="Click here" Foreground="Green" FontWeight="Bold"/>
                </TextBlock>
                <CheckBox Content="  By continuing,I agree to the terms of use &amp; privacy policy"
                          FontSize="20" Margin="20,10,0,0" Foreground="Gray"/>
            </StackPanel>

        </Border>
    </Grid>
   
</Page>

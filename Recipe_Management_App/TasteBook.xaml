<Window x:Class="Recipe_Management_App.TasteBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipe_Management_App"
        mc:Ignorable="d"
        Title="TasteBook" MinHeight="600" MinWidth="800" WindowState="Maximized" SizeToContent="Manual">

    <DockPanel>
        <Grid  Background="White" Height="100" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="TasteBook" FontSize="22" FontWeight="Bold" Foreground="Green" FontFamily="Kaushan Script" FontStyle="Italic" Margin="80,0,0,0" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,10" Grid.Column="1" >
                <Button Content="Home" Margin="0,10,30,0" Padding="12,4" Background="White" BorderThickness="0" BorderBrush="White" FontSize="24" FontWeight="DemiBold" Click="HomeButton" />
                <Button Content="Create Recipe" Margin="0,10,30,0" Padding="12,4" Background="White" BorderThickness="0" BorderBrush="White" FontSize="24" FontWeight="DemiBold" Click="CreateRecipeButton" />
                <Button Content="My Recipes" Margin="0,10,30,0" Padding="12,4" Background="White" BorderThickness="0" BorderBrush="White" FontSize="24" FontWeight="DemiBold" Click="MyRecipeButton"/>
                <Button Content="Favourites" Margin="0,10,250,0"  Padding="12,4" Background="White" BorderThickness="0" BorderBrush="White" FontSize="24" FontWeight="DemiBold" Click="FavouritesButton"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        
    </DockPanel>
</Window>
